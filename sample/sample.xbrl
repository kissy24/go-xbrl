    &lt;/td&gt;
    &lt;td
    style="vertical-align:middle;border-top-style:solid;border-top-width:0.75pt;border-top-color:#000000;border-bottom-style:solid;border-bottom-width:0.75pt;border-bottom-color:#000000;border-left-style:solid;border-left-width:0.75pt;border-left-color:#000000;border-right-style:solid;border-right-width:0.75pt;border-right-color:#000000;overflow:hidden;"
    valign="middle"&gt;&lt;p class="smt_tblL"
    style="orphans:0;widows:0;text-align:center;line-height:15pt;"&gt;&lt;span
    style="font-size:9pt;"&gt;監査上の対応&lt;/span&gt;&lt;/p&gt;
    &lt;/td&gt;
